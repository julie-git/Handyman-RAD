<h2>Manage Customers</h2>
<table>
    <tr>
        <th></th>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Admin</th>
        <th>UserID</th>
        <th>Username</th>
    </tr>
    {{#each users}}
    <tr>
        <td><a href="/admin/customers/{{id}}">Edit</a></td>
        <td>{{id}}</td>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{#if this.User.isAdmin}}Admin{{else}}Not Admin{{/if}}</td>
        <td>{{this.User.id}}</td>
        <td>{{this.User.username}}</td>
    </tr>
    {{/each}}
</table>